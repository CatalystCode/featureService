{
  "rules": {
    "no-console": "off",
    "indent": [
      "error",
      4
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:require-path-exists/recommended",
    "eslint:recommended"
  ],
  "plugins": [
    "require-path-exists"
  ]
}